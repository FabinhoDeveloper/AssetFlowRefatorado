generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id String @id @default(uuid())
  primeiroNome String
  ultimoNome String
  email String @unique
  senha String
  workspaces Workspace[]
}

model Workspace {
  id String @id @default(uuid())
  nome String
  descricao String
  cor String
  usuarioId String

  usuario Usuario @relation(fields: [usuarioId], references: [id], onDelete: Cascade)
  itens Item[]
  exclusoes Exclusao[]
}

model Item {
  id           String     @id @default(uuid())
  nome         String
  categoria    String
  numeroSerie  String
  valor        String
  local        String
  descricao    String
  dataDeCompra DateTime

  workspaceId  String
  workspace    Workspace @relation(fields: [workspaceId], references: [id], onDelete: NoAction)
}

model Exclusao {
  id             String   @id @default(uuid())  
  nomeItem String
  categoriaItem String
  numeroSerieItem String
  motivo         String
  responsavel    String
  dataDeExclusao DateTime
  workspaceId    String

  workspace      Workspace @relation(fields: [workspaceId], references: [id], onDelete: NoAction)
}
